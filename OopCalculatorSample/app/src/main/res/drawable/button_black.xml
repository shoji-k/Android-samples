<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:state_focused="false">
        <layer-list>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
                    <gradient android:startColor="@color/push_start" android:centerColor="@color/push_center" android:endColor="@color/push_end" android:centerY="0.2" android:angle="-90" />
                    <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp" />
                    <corners android:radius="15dp" />
                    <stroke android:width="1dp" android:color="#999999" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="false" android:state_focused="false">
        <layer-list>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
                    <gradient android:startColor="@color/black_start" android:centerColor="@color/black_center" android:endColor="@color/black_end" android:centerY="0.2" android:angle="-90" />
                    <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp" />
                    <corners android:radius="15dp" />
                    <stroke android:width="1dp" android:color="@color/black_center" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true" android:state_focused="true">
        <layer-list>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
                    <gradient android:startColor="@color/push_start" android:centerColor="@color/push_center" android:endColor="@color/push_end" android:centerY="0.2" android:angle="-90" />
                    <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp" />
                    <corners android:radius="15dp" />
                    <stroke android:width="1dp" android:color="#FF6600" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="false" android:state_focused="true">
        <layer-list>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
                    <gradient android:startColor="@color/black_start" android:centerColor="@color/black_center" android:endColor="@color/black_end" android:centerY="0.2" android:angle="-90" />
                    <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp" />
                    <corners android:radius="15dp" />
                    <stroke android:width="1dp" android:color="#FF6600" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>
